{
  "name": "@sreagent/mcp-router",
  "version": "1.0.0",
  "description": "MCP server that routes tool calls to multiple downstream @azure/mcp instances based on endpoint URL",
  "type": "module",
  "bin": {
    "mcp-router": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --outDir dist --dts --clean",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^12.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "kusto",
    "router",
    "azure",
    "sre-agent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/serverless-paas-balam/sreagent-runtime.git",
    "directory": "src/Agent/McpRouter"
  },
  "license": "MIT"
}
